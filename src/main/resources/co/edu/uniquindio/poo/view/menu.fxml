<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.controllers.MenuController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Button fx:id="addSportButton" text="%button.add_sport" onAction="#handleAddSport"/>

    <Button fx:id="addTrainerButton" text="%button.add_trainer" onAction="#handleAddTrainer"/>
    
    <Button fx:id="addMemberButton" text="%button.add_member" onAction="#handleAddMember"/>

    <Button fx:id="addSessionButton" text="%button.add_session" onAction="#handleAddSession"/>

    <Button fx:id="manageSessionsButton" text="%button.manage_sessions" onAction="#handleManageSessions"/>

    <Button fx:id="changeLanguage" text="%button.switch_language" onAction="#switchLanguage"/>
    <Button fx:id="exitButton" text="%button.exit" onAction="#handleSalir"/>
</VBox>