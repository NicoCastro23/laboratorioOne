<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.controllers.TrainerController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Nombre del Entrenador:"/>
    <TextField fx:id="nameTrainerField" promptText="Ingrese el nombren del entrenador"/>

    <Label text="Especialidad del Entrenador:"/>
    <TextField fx:id="especialityField" promptText="Ingrese la Especialidad el Entrenador"/>
    

    <Button text="Agregar Entrenador" onAction="#handleAddTrainer"/>

    <Button text="Salir" onAction="#handleSalir"/>
</VBox>