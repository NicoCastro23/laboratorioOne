<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.controllers.OctonaryController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Fecha de Entrenamiento:"/>
    <DatePicker fx:id="dateField" promptText="Seleccione la fecha de entrenamiento"/>

    <Label text="Duración (en minutos):"/>
    <TextField fx:id="durationField" promptText="Ingrese la duración en minutos"/>

    <Label text="Nombre del Deporte:"/>
    <TextField fx:id="nameSportField" promptText="Ingrese el nombre del deporte"/>

    <Label text="Entrenador del Deporte:"/>
    <TextField fx:id="entrenadorField" promptText="Ingrese el Entreandor del deporte"/>

    <Label text="Estado:"/>
    <ComboBox fx:id="estadoComboBox"/>

    <Button text="Crear sesion" onAction="#handleCreateSession"/>

    <Button text="Salir" onAction="#handleSalir"/>
    
    
</VBox>