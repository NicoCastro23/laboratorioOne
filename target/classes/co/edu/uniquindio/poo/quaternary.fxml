<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.controllers.QuaternaryController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Nombre del Deporte:"/>
    <TextField fx:id="nameSportField" promptText="Ingrese el nombren  del deporte"/>

    <Label text="Descripcion del Deporte:"/>
    <TextField fx:id="descriptionField" promptText="Ingrese la descripcion del deporte"/>
    
    <Label text="Dificultad:"/>
    <ComboBox fx:id="dificultadComboBox"/>

    <Button text="Crear Deporte" onAction="#handlecreate"/>
</VBox>